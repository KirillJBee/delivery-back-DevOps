// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id    Int     @default(autoincrement()) @id
  name  String
  password String
  email String  @unique
  avatar  String?

  orders Order[]
  favorites Food[]
}

model Food {
  id    Int     @default(autoincrement()) @id
  name  String
  description  String
  image  String?
  price String
  about String

  orders Order[]
  users User[]
}



model Order {
  id    Int     @default(autoincrement()) @id
  foods Food[]
  user   User @relation(fields: [userId], references: [id])
  userId Int
}




